@{
    ViewData["Title"] = "Dashboard";
    ViewData["ActivePage"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .stats-card {
        background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
        border: 1px solid #2d3748;
        border-radius: 1rem;
        padding: 1.5rem;
        box-shadow: 0 8px 32px rgba(0,0,0,0.3);
        transition: all 0.3s ease;
    }
    
    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(0,0,0,0.4);
    }
    
    .stats-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }
    
    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        color: #3182ce;
    }
    
    .stats-label {
        color: #a0aec0;
        font-size: 0.875rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
</style>

<div class="row mb-4">
    <div class="col-12">
        <h1 class="text-white mb-0">
            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
        </h1>
        <p class="text-muted">Welcome to your admin panel</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6 col-lg-3 mb-3">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-primary bg-gradient">
                    <i class="fas fa-box text-white"></i>
                </div>
                <div class="ms-3">
                    <div class="stats-number">@ViewBag.ProductCount</div>
                    <div class="stats-label">Products</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-3">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-success bg-gradient">
                    <i class="fas fa-tags text-white"></i>
                </div>
                <div class="ms-3">
                    <div class="stats-number">@ViewBag.CategoryCount</div>
                    <div class="stats-label">Categories</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-3">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-warning bg-gradient">
                    <i class="fas fa-image text-white"></i>
                </div>
                <div class="ms-3">
                    <div class="stats-number">0</div>
                    <div class="stats-label">Gallery Items</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 col-lg-3 mb-3">
        <div class="stats-card">
            <div class="d-flex align-items-center">
                <div class="stats-icon bg-info bg-gradient">
                    <i class="fas fa-eye text-white"></i>
                </div>
                <div class="ms-3">
                    <div class="stats-number">0</div>
                    <div class="stats-label">Page Views</div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="text-white mb-0">
                    <i class="fas fa-rocket me-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("HomeContentEdit", "Admin")" class="btn btn-outline-primary">
                        <i class="fas fa-edit me-2"></i>Edit Website Content
                    </a>
                    <a href="@Url.Action("ProductAdd", "Admin")" class="btn btn-outline-success">
                        <i class="fas fa-plus me-2"></i>Add New Product
                    </a>
                    <a href="@Url.Action("CategoryAdd", "Admin")" class="btn btn-outline-warning">
                        <i class="fas fa-tags me-2"></i>Add New Category
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="text-white mb-0">
                    <i class="fas fa-chart-line me-2"></i>Recent Activity
                </h5>
            </div>
            <div class="card-body">
                <div class="text-muted">
                    <p><i class="fas fa-clock me-2"></i>No recent activity</p>
                    <p><i class="fas fa-info-circle me-2"></i>Start adding products and categories to see activity here</p>
                </div>
            </div>
        </div>
    </div>
</div> 