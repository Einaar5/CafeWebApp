@model WebApp1.Models.DataTransferObjects.Dto_Product

@{
    ViewData["Title"] = "Ürün Düzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3" style="background-color: #34495e;">
        <h2 class="text-center mb-5">Ürün Düzenle</h2>

        <form method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-light">Ad</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-light">Açıklama</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Kategori</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="CategoryId">
                        <option value="">Lütfen bir kategori seçin</option>
                        @if (ViewData["Categories"] is List<WebApp1.Models.CategoryMenu> categoryMenu)
                        {
                            @foreach (var category in categoryMenu)
                            {
                                <option value="@category.Id" selected="@(category.Id == Model.CategoryId ? "selected" : null)">@category.Name</option>
                                //
                            }
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-light">Fiyat</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-light">Popüler mi?</label>
                <div class="col-sm-8">
                    <input type="checkbox" asp-for="isPopular" class="form-check-input" />
                    <span asp-validation-for="isPopular" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label text-light">Resim</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    @if (!string.IsNullOrEmpty(ViewData["ImageFileName"] as string))
                    {
                        <img src="~/images/productImage/@ViewData["ImageFileName"]" alt="Current Image" style="max-width: 200px; margin-top: 10px;" />
                    }
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-action="ProductList" asp-controller="Admin" role="button">İptal</a>
                </div>
            </div>
        </form>
    </div>
</div>