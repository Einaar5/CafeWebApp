@model WebApp1.Models.DataTransferObjects.Dto_Content

@{
    ViewData["Title"] = "Edit Content";
    ViewData["ActivePage"] = "HomeContentEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .text-danger {
        color: #dc3545 !important;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
    .field-validation-error {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
    
    .form-label {
        color: #e9ecef;
        font-weight: 600;
    }
    
    .card {
        background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
        border: 1px solid #2d3748;
        border-radius: 1rem;
        box-shadow: 0 8px 32px rgba(0,0,0,0.3);
    }
    
    .card-header {
        background: linear-gradient(135deg, #2d3748 0%, #4a5568 100%);
        border-bottom: 1px solid #4a5568;
        border-radius: 1rem 1rem 0 0 !important;
    }
</style>

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center mb-0 text-white">
                    <i class="fas fa-edit me-2"></i>Edit Website Content
                </h2>
            </div>
            <div class="card-body p-4">
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        
        @if (TempData["DebugMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @TempData["DebugMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="post" action="@Url.Action("HomeContentEdit", "Admin")" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Title</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Phone Number</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Header Title Sm</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="HeaderTitleSm" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Header Title Gr</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="HeaderTitleGr" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Header Image 1</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="HeaderImageUrl1" type="file" />
                    @if (!string.IsNullOrEmpty(ViewData["HeaderImageUrl1"] as string))
                    {
                        <img src="~/images/content/@ViewData["HeaderImageUrl1"]" alt="Header Image 1" style="max-width: 200px; margin-top: 10px;" />
                    }
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Header Image 2</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="HeaderImageUrl2" type="file" />
                    @if (!string.IsNullOrEmpty(ViewData["HeaderImageUrl2"] as string))
                    {
                        <img src="~/images/content/@ViewData["HeaderImageUrl2"]" alt="Header Image 2" style="max-width: 200px; margin-top: 10px;" />
                    }
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Header Paragraph</label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="HeaderParagraph"></textarea>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">About Title</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="AboutTitle" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">About Paragraph</label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="AboutParagraph"></textarea>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">About Image</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="AboutImageUrl" type="file" />
                    @if (!string.IsNullOrEmpty(ViewData["AboutImageUrl"] as string))
                    {
                        <img src="~/images/content/@ViewData["AboutImageUrl"]" alt="About Image" style="max-width: 200px; margin-top: 10px;" />
                    }
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Menu Title</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="MenuTitle" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Gallery Title</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="GalleryTitle" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Footer Title</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FooterTitle" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Facebook URL</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FooterFaceBookUrl" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Instagram URL</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FooterInstagramUrl" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Twitter URL</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FooterTwitterUrl" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Location</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FooterLocation" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Opening Hours</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FooterOpeningHours" />
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label text-light">Email</label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="FooterEmail" />
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-2 col-sm-10 d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Update Content
                    </button>
                </div>
            </div>
        </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}