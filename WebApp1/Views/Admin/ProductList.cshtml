@model List<WebApp1.Models.Product>

@{
    ViewData["Title"] = "Product List";
    ViewData["ActivePage"] = "ProductList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-white mb-0">
        <i class="fas fa-list me-2"></i>Product List
    </h2>
    <a href="@Url.Action("ProductAdd", "Admin")" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add New Product
    </a>
</div>

<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>No</th>
            <th>Ürün Adı</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Kategori</th>
            <th>Populer mi</th>
            <th>Oluşturma Zamanı</th>
            <th>Görsel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.Category.Name</td>
                <td>@product.isPopular</td>
                <td>@product.CreatedAt.ToString("g")</td>
                <td><img src="/images/productImage/@product.ImageUrl" width="100" alt="Alternate Text" /></td>
                <td>
                    <a class="btn btn-success btn-sm" asp-controller="Admin" asp-action="ProductEdit" asp-route-id="@product.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Admin" asp-action="ProductDelete" asp-route-id="@product.Id" onclick="return confirm('(@product.Name) Adlı ürünü silmek istediğinizden emin misiniz ?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>