<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - @ViewData["Title"]</title>

    <!-- Bootstrap Dark Theme (Bootswatch Darkly) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.0/dist/darkly/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #0f1419;
            color: #e9ecef;
        }

        .sidebar {
            background: linear-gradient(135deg, #1a1f2c 0%, #2d3748 100%);
            height: 100vh;
            padding-top: 1rem;
            border-right: 1px solid #2d3748;
            box-shadow: 2px 0 10px rgba(0,0,0,0.3);
        }

        .sidebar .nav-link {
            color: #a0aec0;
            padding: 0.75rem 1rem;
            transition: all 0.3s ease;
            border-radius: 0.5rem;
            margin: 0.25rem 0.5rem;
            font-weight: 500;
        }

        .sidebar .nav-link:hover {
            background: linear-gradient(135deg, #3182ce 0%, #2b6cb0 100%);
            color: #fff;
            transform: translateX(5px);
            box-shadow: 0 4px 12px rgba(49, 130, 206, 0.3);
        }

        .sidebar .nav-link.active {
            background: linear-gradient(135deg, #3182ce 0%, #2b6cb0 100%);
            color: #fff;
            box-shadow: 0 4px 12px rgba(49, 130, 206, 0.3);
        }

        .content {
            padding: 2rem;
            background-color: #0f1419;
            min-height: 100vh;
        }

        .card {
            background: linear-gradient(135deg, #1a202c 0%, #2d3748 100%);
            border: 1px solid #2d3748;
            border-radius: 0.75rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        }

        .btn-primary {
            background: linear-gradient(135deg, #3182ce 0%, #2b6cb0 100%);
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(49, 130, 206, 0.4);
        }

        .form-control {
            background-color: #2d3748;
            border: 1px solid #4a5568;
            color: #e9ecef;
            border-radius: 0.5rem;
        }

        .form-control:focus {
            background-color: #2d3748;
            border-color: #3182ce;
            color: #e9ecef;
            box-shadow: 0 0 0 0.2rem rgba(49, 130, 206, 0.25);
        }

        .table {
            background-color: #1a202c;
            border-radius: 0.75rem;
            overflow: hidden;
        }

        .table th {
            background-color: #2d3748;
            color: #e9ecef;
            border-bottom: 1px solid #4a5568;
        }

        .table td {
            color: #a0aec0;
            border-bottom: 1px solid #2d3748;
        }

        .alert {
            border-radius: 0.75rem;
            border: none;
        }

        .toggle-sidebar {
            display: none;
        }

        @@media (max-width: 768px) {
            .sidebar {
                position: fixed;
                top: 0;
                left: -250px;
                width: 250px;
                z-index: 1050;
                transition: left 0.3s ease-in-out;
            }

            .sidebar.active {
                left: 0;
            }

            .toggle-sidebar {
                display: block;
                position: fixed;
                top: 1rem;
                left: 1rem;
                z-index: 1100;
                background: linear-gradient(135deg, #3182ce 0%, #2b6cb0 100%);
                color: #fff;
                border: none;
                border-radius: 0.5rem;
                padding: 0.5rem 0.75rem;
                box-shadow: 0 4px 12px rgba(49, 130, 206, 0.3);
            }

            .content {
                padding-top: 4rem;
            }
        }
    </style>
</head>
<body>

    <!-- Mobile Sidebar Toggle Button -->
    <button class="toggle-sidebar d-md-none" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 sidebar bg-dark">
                <div class="text-center mb-4">
                    <h4 class="text-white mb-0">Admin Panel</h4>
                    <small class="text-muted">Dashboard</small>
                </div>
                <ul class="nav flex-column px-2">
                    <li class="nav-item mb-2">
                        <a href="@Url.Action("Index", "Admin")" class="nav-link @(ViewData["ActivePage"] == "Index" ? "active" : "")">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                    </li>
                    
                    <li class="nav-item mb-2">
                        <a href="@Url.Action("HomeContentEdit", "Admin")" class="nav-link @(ViewData["ActivePage"] == "HomeContentEdit" ? "active" : "")">
                            <i class="fas fa-edit me-2"></i> Edit Content
                        </a>
                    </li>
                    
                    <li class="nav-item mb-2">
                        <a href="@Url.Action("ProductList", "Admin")" class="nav-link @(ViewData["ActivePage"] == "ProductList" ? "active" : "")">
                            <i class="fas fa-list me-2"></i> Product List
                        </a>
                    </li>
                    
                    <li class="nav-item mb-2">
                        <a href="@Url.Action("ProductAdd", "Admin")" class="nav-link @(ViewData["ActivePage"] == "ProductAdd" ? "active" : "")">
                            <i class="fas fa-plus me-2"></i> Add Product
                        </a>
                    </li>
                    
                    <li class="nav-item mb-2">
                        <a href="@Url.Action("CategoryList", "Admin")" class="nav-link @(ViewData["ActivePage"] == "CategoryList" ? "active" : "")">
                            <i class="fas fa-tags me-2"></i> Categories
                        </a>
                    </li>
                    
                    <li class="nav-item mb-2">
                        <a href="@Url.Action("CategoryAdd", "Admin")" class="nav-link @(ViewData["ActivePage"] == "CategoryAdd" ? "active" : "")">
                            <i class="fas fa-plus-circle me-2"></i> Add Category
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 content">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2 class="text-white">@ViewData["Title"]</h2>
                </div>
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function toggleSidebar() {
            document.querySelector('.sidebar').classList.toggle('active');
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
